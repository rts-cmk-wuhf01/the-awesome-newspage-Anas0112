<!DOCTYPE html>
<html <%- include('partials/language') %>>

<head>
    <%- include('partials/meta-tags') %>
    <!-- The above 4 meta tags *must* come first in the head; any other head content must come *after* these tags -->

    <!-- Title -->
    <%- include('partials/title') %>
    
    <!-- Favicon -->
    <%- include('partials/favicon') %>

    <!-- Core Stylesheet -->
    <%- include('partials/style') %>

</head>

<body>
    <!-- ##### Header Area Start ##### -->
    <%- include('partials/header') %>
    <!-- ##### Header Area End ##### -->

    <!-- ##### Hero Area Start ##### -->
    <%- include('partials/hero-area') %>
    <!-- ##### Hero Area End ##### -->

    <!-- ##### Blog Area Start ##### -->
    <div class="blog-area section-padding-0-80">
        <div class="container">
            <div class="row">
                <div class="col-12 col-lg-8">
                    <div class="blog-posts-area">

                        
                        <% if(typeof selectedCategory != 'undefined'){ %> 
                            <h1><%= selectedCategory.category_title %></h1><br>
                        <%}%>
                         
                            <% if(typeof articles != 'undefined'){ %>
                                <% if(articles.length == 0){ %>
                                    <h2>No Articles Found</h2>
                                <% } %>
                                <% articles.forEach(article =>{ %>
                            
                                <div class="single-blog-post featured-post mb-30">
                                    <div class="post-thumb">
                                            <a href="/single-post/<%= article.article_id %>"><img src="/img/bg-img/<%= article.article_image %>" alt=""></a>
                                        </div>
                                        <div class="post-data">
                                            <a href="#" class="post-catagory"><%= article.category_title %></a>
                                            <a href="#" class="post-title">
                                                <h6><%= article.article_title %></h6>
                                            </a>
                                            <div class="post-meta">
                                                <p class="post-author">By <a href="#">
                                                        <%= article.author_name %>
                                                </a></p>
                                                <p class="post-excerp"><%= article.article_text %></p>
                                                <!-- Post Like & Post Comment -->
                                                <div class="d-flex align-items-center">
                                                    <a href="#" class="post-like"><img src="/img/core-img/like.png" alt="">
                                                        <span><%= article.article_likes %></span></a>
                                                    <a href="#" class="post-comment"><img src="/img/core-img/chat.png" alt="">
                                                        <span>10</span></a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                            
                                <% }); %>
                             <% } %>

                    </div>

                    <nav aria-label="Page navigation example">
                        <ul class="pagination mt-50">
                            <li class="page-item active"><a class="page-link" href="#">1</a></li>
                            <li class="page-item"><a class="page-link" href="#">2</a></li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item"><a class="page-link" href="#">4</a></li>
                            <li class="page-item"><a class="page-link" href="#">5</a></li>
                            <li class="page-item"><a class="page-link" href="#">...</a></li>
                            <li class="page-item"><a class="page-link" href="#">10</a></li>
                        </ul>
                    </nav>
                </div>

                <div class="col-12 col-lg-4">
                    <div class="blog-sidebar-area">

                        <!-- Latest Posts Widget -->
                        <div class="latest-posts-widget mb-50">

                            <!-- Single Featured Post -->
							<%- include('partials/single-featured-post') %>

                            <!-- Single Featured Post -->
							<%- include('partials/single-featured-post') %>

                            <!-- Single Featured Post -->
							<%- include('partials/single-featured-post') %>

                            <!-- Single Featured Post -->
							<%- include('partials/single-featured-post') %>

                            <!-- Single Featured Post -->
							<%- include('partials/single-featured-post') %>

                            <!-- Single Featured Post -->
                            <%- include('partials/single-featured-post') %>
                        </div>

                        <!-- Popular News Widget -->
                        <%- include('partials/popular-news-widget') %>
                        <!-- Newsletter Widget -->
						<%- include('partials/newsletter-widget') %>

                        <!-- Latest Comments Widget -->
                        <%- include('partials/latest-comment-widget') %>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- ##### Blog Area End ##### -->

    <!-- ##### Footer Area Start ##### -->
    <%- include('partials/footer-area.ejs') %>
    <!-- ##### Footer Area Start ##### -->

    <!-- ##### All Javascript Files ##### -->
	<%- include('partials/scripts.ejs') %>
</body>

</html>