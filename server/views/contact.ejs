<!DOCTYPE html>
<html <%- include('partials/language') %>>

<head>
    <%- include('partials/meta-tags') %>
    <!-- The above 4 meta tags *must* come first in the head; any other head content must come *after* these tags -->

    <!-- Title -->
    <%- include('partials/title') %>
    
    <!-- Favicon -->
    <%- include('partials/favicon') %>

    <!-- Core Stylesheet -->
    <%- include('partials/style') %>

</head>

<body>
    <!-- ##### Header Area Start ##### -->
    <%- include('partials/header') %>
    <!-- ##### Header Area End ##### -->

    <!-- ##### Hero Area Start ##### -->
    <%- include('partials/hero-area') %>
    <!-- ##### Hero Area End ##### -->


	<!-- ##### Contact Form Area Start ##### -->
	<% if( typeof return_message != 'undefined'){ %>
		<h4><%= return_message %></h4>
	 <% } %>
    <div class="contact-area section-padding-0-80">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="contact-title">
                        <h2>Contact us</h2>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-12 col-lg-8">
                    <div class="contact-form-area">
                        <form method="post">
                            <div class="row">
                                <div class="col-12 col-lg-6">
                                    <input type="text" class="form-control" id="name" placeholder="Name" name="name" value="<%= typeof values != 'undefined' ? values.name: '' %>">
                                </div>
                                <div class="col-12 col-lg-6">
                                    <input type="email" class="form-control" id="email" placeholder="E-mail" name="email" value="<%= typeof values != 'undefined' ? values.email: '' %>">
                                </div>
                                <div class="col-12">
                                    <input type="text" class="form-control" id="subject" placeholder="Subject" name="subject" value="<%= typeof values != 'undefined' ? values.subject: '' %>">
                                </div>
                                <div class="col-12">
										<textarea name="message"><%= typeof values != 'undefined' ? values.message : '' %></textarea>
                                </div>
                                <div class="col-12 text-center">
                                    <button class="btn newspaper-btn mt-30 w-100" type="submit">Send Message</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

                <div class="col-12 col-lg-4">
                    <!-- Single Contact Information -->
                    <div class="single-contact-information mb-30">
                        <h6>Address:</h6>
                        <p>481 Creekside Lane Avila <br>Beach, CA 93424</p>
                    </div>
                    <!-- Single Contact Information -->
                    <div class="single-contact-information mb-30">
                        <h6>Phone:</h6>
                        <p>+53 345 7953 32453 <br>+53 345 7557 822112</p>
                    </div>
                    <!-- Single Contact Information -->
                    <div class="single-contact-information mb-30">
                        <h6>Email:</h6>
                        <p>yourmail@gmail.com</p>
                    </div>
                </div>
            </div>

            <!-- Google Maps -->
            <div class="map-area">
                <div id="googleMap"></div>
            </div>

        </div>
    </div>
    <!-- ##### Contact Form Area End ##### -->

    <!-- ##### Footer Area Start ##### -->
    <%- include('partials/footer-area.ejs') %>
    <!-- ##### Footer Area Start ##### -->

    <!-- ##### All Javascript Files ##### -->
	<%- include('partials/scripts.ejs') %>
</body>

</html>